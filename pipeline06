pipeline {
  agent any
  stages {
    stage('First stage') {
      steps {
        sh 'echo First stage first Script. AAA'
      }
    }
    stage('script') {
      steps {
        echo 'Going to SCRIPT'
        
        script {
          println "Groovy Hombre GROOVY"
          println "env.PATH = '$env.PATH'"
          println "env.BUILD_ID = '$env.BUILD_ID'"
        }
      }
    }

  }
  environment {
    MyEnvVar = 'MyEnvValue'
  }
}
